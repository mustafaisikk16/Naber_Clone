<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupChat_Activity">

    <include
        android:id="@+id/group_chat_actinbar"
        layout="@layout/actionbar_app"
        >

    </include>

    <ScrollView
        android:id="@+id/Scroll_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_chat_actinbar"
        android:layout_above="@+id/MyLinearLayouth">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Group_chat_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:padding="10dp"
                android:textSize="20dp"
                android:textColor="@android:color/background_dark"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="60dp"
                />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/MyLinearLayouth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"        >

        <EditText
            android:id="@+id/Group_chat_EditText"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:padding="17dp"
            android:hint="Lütfen Mesajınızı Giriniz..."
            />
        <ImageButton
            android:id="@+id/group_chat_ımage"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/send_message"
            />


    </LinearLayout>


</RelativeLayout>
